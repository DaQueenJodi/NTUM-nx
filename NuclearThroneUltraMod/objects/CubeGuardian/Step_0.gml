event_inherited()
if charge
{
	imageIndex += 0.4;
	image_index = imageIndex;
	if sprite_index != spr_hurt
		sprite_index = spr_charge;
	if round(image_index) == image_number - 3 && !fired
	{
		event_user(0);	
	}
	speed = 0;
}
else
{
speed = max(speed,2);
motion_add(direction,2)

if speed > 3.5
speed = 3.5
}